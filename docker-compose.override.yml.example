# Example override file for development
# Copy to docker-compose.override.yml and customize
version: '3.8'

services:
  api:
    # Mount source code for hot reload in development
    volumes:
      - ./src:/app/src
    # Override command for development
    command: uvicorn main:app --host 0.0.0.0 --port 8004 --reload
    environment:
      - DEBUG=true
